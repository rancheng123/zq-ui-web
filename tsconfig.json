{
  "compilerOptions": {
    "noImplicitAny": false,
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "rootDir": ".",
  },
  "exclude": [
    "node_modules",
    "lib"
  ],
  "include": [
    "src/packages"
  ]
}